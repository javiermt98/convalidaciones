<odoo>
    <data>
        <record model="ir.ui.view" id="convalidaciones.listado_modulo_tree">
            <field name="name">Módulo</field>
            <field name="model">convalidaciones.modulo_model</field>
            <field name="arch" type="xml">
                <tree decoration-success="horas &gt;= 5"  decoration-danger="horas &lt; 5">
                    <field name="name" />
                    <field name="descripcion" />
                    <field name="horas" />
                    <field name="ciclo" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="convalidaciones.listado_modulo_form">
            <field name="name">Módulo</field>
            <field name="model">convalidaciones.modulo_model</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group name="GrupoPrincipal">
                            <field name="name" />
                            <field name="descripcion" />
                            <field name="horas" />
                            <field name="ciclo" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="convalidaciones.action_window_modulo">
            <field name="name">Módulos</field>
            <field name="res_model">convalidaciones.modulo_model</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>